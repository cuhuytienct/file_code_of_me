#include<iostream>
using namespace std;
void nhapmang(int a[], int n);
void insertsort(int a[], int n);
void nhapmang(int a[], int n);

void xuatmang(int a[], int n);
int main()
{
	int a[100];
	int n;
	cout << "nhap n:";
	cin >> n;
	nhapmang(a, n);
	insertsort(a, n);
	xuatmang(a, n);

	return 0;
}
void nhapmang(int a[], int n)
{
	for (int i = 0; i < n; i++)
	{
		cout << "nhap mang";
		cin >> a[i];
	}

}
void insertsort(int a[], int n)
{
	for (int i = 1; i < n; i++)
	{
		int x = a[i], pos = i - 1;
		// tìm vị trí chèn x
		while (pos >= 0 && a[pos] > x)
		{
			a[pos + 1] = a[pos];
				pos = pos - 1;
				a[pos + 1] = x;
		}

	}
}

void xuatmang(int a[], int n)
{
	cout << "mang sau khi chuyen:";
	for (int i = 0; i < n; i++)
	{
		cout << a[i] << " ";
	}

}
