#include <iostream>
using namespace std;
void nhapmang(int a[], int n);
void xuatmang(int a[], int n);
void selectionsort(int a[], int n);
int main()
{
    int a[100];
    int n;
    cin >> n;
    nhapmang(a, n);
    selectionsort(a, n);
    xuatmang(a, n);

    return 0;
}
void nhapmang(int a[], int n)
{
    for (int i = 0; i < n; i++)
    {
        cout << "nhap vao mang ";
        cin >> a[i];
    }
}
void selectionsort(int a[], int n)
{
    for (int i = 0; i < n - 1; i++) // <= i < n-1
    {
        int min = i;
        {
            for (int j = i + 1; j < n; j++) // <= j<n
                if (a[j] < a[min])
                    min = j; // Không khai báo lại int min
        }
        swap(a[min], a[i]);

    }
}
void xuatmang(int a[], int n)
{
    for (int i = 0; i < n; i++)
        cout << a[i] << " ";
}
