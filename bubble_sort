//thuật toán nỗi bọt
#include <iostream>
using namespace std;
void inArr(int a[], int n);
void bubblesort(int a[], int n);
void outArr(int a[], int n);
int main() 
{
	int a[1000];
	int n;
	cout << "nhap so phan tu cua mang:";
	cin >> n;
    inArr(a,  n);
    bubblesort(a,  n);
    outArr(a,  n);
	return 0;

}
void inArr(int a[], int n)
{
	for (int i = 0; i < n; i++)
	{
		cout << "A[" << i << "]=";
		cin >> a[i];
	}
}
void bubblesort(int a[], int n)
{
	for (int i = 0; i < n - 1; i++)
		for (int j = n - 1; j >= i; j--)
		{
			if (a[j] < a[j - 1])
			{
				swap(a[j], a[j - 1]);
			}
		}
}
void outArr(int a[], int n)
{
	cout << "output array:";
	for (int i = 0; i < n; i++)
		cout << a[i] << " ";
}
